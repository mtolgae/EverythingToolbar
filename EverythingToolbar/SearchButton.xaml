<Button x:Class="EverythingToolbar.SearchButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DesignHeight="40"
        d:DesignWidth="50"
        PreviewMouseUp="OnMouseUp"
        PreviewMouseDown="OnMouseDown"
        IsVisibleChanged="OnIsVisibleChanged"
        Style="{DynamicResource SearchButtonStyle}"
        ToolTip="Ara">
    <Button.Resources>
        <Style x:Key="SearchButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="OuterBorder"
                                Background="Transparent"
                                SnapsToDevicePixels="True">
                            <Border x:Name="InnerBorder"
                                    Background="Transparent"
                                    SnapsToDevicePixels="True">
                                <Path Stroke="{TemplateBinding Foreground}" StrokeThickness="1" Width="16" Height="18">
                                    <Path.Data>
                                        <GeometryGroup>
                                            <LineGeometry StartPoint="0, 17" EndPoint="6, 11" />
                                            <EllipseGeometry Center="10, 7" RadiusX="5.3" RadiusY="5.3" />
                                        </GeometryGroup>
                                    </Path.Data>
                                </Path>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding ElementName=SearchResultsPopup,
                                                           Path=IsOpen,
                                                           Mode=OneWay}"
                                         Value="True">
                                <Setter Property="Background"
                                        TargetName="OuterBorder"
                                        Value="#0bffffff"/>
                            </DataTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="OuterBorder" Value="#0bffffff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetProperty="Background.Color"
                                                            Storyboard.TargetName="InnerBorder"
                                                            To="#16ffffff" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.1"
                                                            Storyboard.TargetProperty="Background.Color"
                                                            Storyboard.TargetName="InnerBorder"
                                                            To="Transparent" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Resources>
</Button>
